<Window x:Class="MyFirstWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="MyButton" Content="Button" HorizontalAlignment="Left" Margin="38,46,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.5,0.5" Height="54" Click="Button_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="17.423"/>
                    <RotateTransform Angle="35.915"/>
                    <TranslateTransform X="6.862" Y="4.97"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <TextBox x:Name="MyTextBox" HorizontalAlignment="Left" Height="23" Margin="106,231,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
